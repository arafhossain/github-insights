datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Summary {
  id        String   @id @default(cuid())
  userId    String?
  repos     String
  sinceISO  String
  model     String
  content   String
  promptTok Int?
  compTok   Int?
  totalTok  Int?
  costUSD   Float?
  createdAt DateTime @default(now())

  @@index([createdAt])
}
