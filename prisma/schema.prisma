datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  summaries Summary[]
  autoGenerate   Boolean   @default(false)
  repos          Repo[]
}

model Summary {
  id        String   @id @default(cuid())
  userId    String
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
  repos     String
  since     DateTime
  model     String
  content   String
  promptTok Int?
  compTok   Int?
  totalTok  Int?
  costUSD   Float?
  createdAt DateTime @default(now())

  @@index([createdAt])
}

model Repo {
  id        String   @id @default(cuid())
  name      String
  fullName  String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}